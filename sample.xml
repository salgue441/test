<?xml version="1.0" encoding="UTF-8"?>
<!-- Sample XML Configuration File for Testing DocGen Platform -->
<application-config>
    <metadata>
        <name>DocGen Platform</name>
        <version>1.0.0</version>
        <description>AI-Powered Documentation Generation Platform</description>
        <author>Development Team</author>
        <created>2024-01-15</created>
    </metadata>
    
    <database>
        <type>H2</type>
        <connection>
            <url>jdbc:h2:mem:docgendb</url>
            <username>sa</username>
            <password></password>
            <driver>org.h2.Driver</driver>
        </connection>
        <pool>
            <min-size>5</min-size>
            <max-size>20</max-size>
            <timeout>30000</timeout>
        </pool>
    </database>
    
    <api>
        <endpoints>
            <endpoint path="/api/repositories" method="GET" description="Get all repositories"/>
            <endpoint path="/api/repositories/connect" method="POST" description="Connect a new repository"/>
            <endpoint path="/api/documents/generate" method="POST" description="Generate documentation"/>
            <endpoint path="/api/webhooks/github-event" method="POST" description="Handle GitHub webhook events"/>
        </endpoints>
        <cors>
            <allowed-origins>
                <origin>http://localhost:3000</origin>
                <origin>http://localhost:3001</origin>
            </allowed-origins>
        </cors>
    </api>
    
    <services>
        <github-service>
            <enabled>true</enabled>
            <token>${GITHUB_TOKEN}</token>
            <rate-limit>5000</rate-limit>
            <timeout>30000</timeout>
        </github-service>
        
        <ai-service>
            <provider>anthropic</provider>
            <model>claude-sonnet-4-20250514</model>
            <api-url>https://api.anthropic.com/v1/messages</api-url>
            <api-key>${ANTHROPIC_API_KEY}</api-key>
            <max-tokens>4096</max-tokens>
            <temperature>0.7</temperature>
        </ai-service>
        
        <webhook-service>
            <enabled>true</enabled>
            <secret>${GITHUB_WEBHOOK_SECRET}</secret>
            <events>
                <event>push</event>
                <event>pull_request</event>
                <event>issues</event>
            </events>
        </webhook-service>
    </services>
    
    <features>
        <feature name="xml-parsing" enabled="true">
            <description>Parse XML files and extract structure</description>
            <supported-formats>
                <format>application/xml</format>
                <format>text/xml</format>
            </supported-formats>
        </feature>
        
        <feature name="diagram-generation" enabled="true">
            <description>Generate Mermaid diagrams from code</description>
            <diagram-types>
                <type>flowchart</type>
                <type>sequence</type>
                <type>class</type>
                <type>entity-relationship</type>
            </diagram-types>
        </feature>
        
        <feature name="markdown-generation" enabled="true">
            <description>Generate Markdown documentation</description>
            <sections>
                <section>overview</section>
                <section>architecture</section>
                <section>api-reference</section>
                <section>usage-examples</section>
            </sections>
        </feature>
    </features>
    
    <logging>
        <level>INFO</level>
        <appenders>
            <appender type="console" enabled="true"/>
            <appender type="file" enabled="true" path="logs/application.log"/>
        </appenders>
        <packages>
            <package name="com.docgen" level="DEBUG"/>
            <package name="org.springframework" level="INFO"/>
        </packages>
    </logging>
    
    <security>
        <authentication>
            <method>oauth2</method>
            <providers>
                <provider name="github" enabled="true"/>
            </providers>
        </authentication>
        <encryption>
            <algorithm>AES-256</algorithm>
            <key-size>256</key-size>
        </encryption>
    </security>
    
    <performance>
        <cache>
            <enabled>true</enabled>
            <ttl>3600</ttl>
            <max-size>1000</max-size>
        </cache>
        <thread-pool>
            <core-size>10</core-size>
            <max-size>50</max-size>
            <queue-size>100</queue-size>
        </thread-pool>
    </performance>
</application-config>
